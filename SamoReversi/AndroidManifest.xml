                <action android:name="samo.reversi.PLAY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".SamoOptions" 
             android:screenOrientation="portrait">
            <intent-filter >
                <action android:name="samo.reversi.OPTIONS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".SamoWinner" 
             android:screenOrientation="portrait">
            <intent-filter >
                <action android:name="samo.reversi.WINNER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".SamoGameRules" 
             android:screenOrientation="portrait">
            <intent-filter >
                <action android:name="samo.reversi.RULES" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
    </application>

</manifest>