            android:label="@string/app_name"
            android:name=".SamoReversiActivity" 
             android:screenOrientation="portrait">
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".SamoMenu" 
             android:screenOrientation="portrait">
            <intent-filter >
                <action android:name="samo.reversi.MENU" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
         <activity
            android:label="@string/app_name"
            android:name=".SamoHistoryActivity" 
             android:screenOrientation="portrait">
            <intent-filter >
                <action android:name="samo.reversi.HISTORY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".SamoGameBoard" 
             android:screenOrientation="portrait">
