<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/background">

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:layout_weight="0.42"
                android:src="@drawable/ninja_bghead" />

            <TextView
                android:id="@+id/score_white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="2"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/txt:"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text=" : "
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/score_black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="2"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="42dp"
                android:layout_height="64dp"
                android:layout_weight="0.42"
                android:src="@drawable/ninja_bghead2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutundo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="120dp" >

            <TextView
                android:id="@+id/txtWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight="0.30"
                android:gravity="center_horizontal"
                android:text="White"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/butundo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="undo" />

            <TextView
                android:id="@+id/txtBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight="0.30"
                android:gravity="center_horizontal"
                android:text="Black"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="180dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" >

                <ImageButton
                    android:id="@+id/butboard_4_mat_00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/black_button"
                    android:src="@drawable/biggerbutten00" />

                <ImageButton
                    android:id="@+id/butboard_4_mat_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/black_button"
                    android:src="@drawable/biggerbutten01" />

                <ImageButton
                    android:id="@+id/butboard_4_mat_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/black_button"
                    android:src="@drawable/biggerbutten01" />

                <ImageButton
                    android:id="@+id/butboard_4_mat_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/black_button"
                    android:src="@drawable/biggerbutten01" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageButton
                    android:id="@+id/butboard_4_mat_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/black_button"
                    android:src="@drawable/biggerbutten10" />

                <ImageButton
                    android:id="@+id/butboard_4_mat_11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/black_button"
                    android:src="@drawable/biggerbutten11" />

                <ImageButton
                    android:id="@+id/butboard_4_mat_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/black_button"
                    android:src="@drawable/biggerbutten11" />

                <ImageButton
                    android:id="@+id/butboard_4_mat_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/black_button"
                    android:src="@drawable/biggerbutten11" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageButton
                    android:id="@+id/butboard_4_mat_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/black_button"
                    android:src="@drawable/biggerbutten10" />

                <ImageButton
                    android:id="@+id/butboard_4_mat_21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/black_button"
                    android:src="@drawable/biggerbutten11" />

                <ImageButton
                    android:id="@+id/butboard_4_mat_22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/black_button"
                    android:src="@drawable/biggerbutten11" />

                <ImageButton
                    android:id="@+id/butboard_4_mat_23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/black_button"
                    android:src="@drawable/biggerbutten11" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageButton
                    android:id="@+id/butboard_4_mat_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/black_button"
                    android:src="@drawable/biggerbutten10" />

                <ImageButton
                    android:id="@+id/butboard_4_mat_31"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/black_button"
                    android:src="@drawable/biggerbutten11" />

                <ImageButton
                    android:id="@+id/butboard_4_mat_32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/black_button"
                    android:src="@drawable/biggerbutten11" />

                <ImageButton
                    android:id="@+id/butboard_4_mat_33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/black_button"
                    android:src="@drawable/biggerbutten11" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/historynextstep"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="150dp" 
            android:text=">>  next  >>" />

        <Button
            android:id="@+id/historyprevstep"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="150dp" 
            android:text="&lt;&lt;  prev  &lt;&lt;" />

    </RelativeLayout>

</LinearLayout>